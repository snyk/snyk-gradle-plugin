{
  "compilerOptions": {
      "outDir": "./dist",
      "pretty": true,
      "target": "es5",
      "lib": [
        "es5",
        "es2015.promise",
      ],
      "module": "commonjs",
      "allowJs": false,
      "sourceMap": true,
      "strict": true,
      "importHelpers": true,
      "noImplicitAny": false // Needed to compile tap and ansi-escapes
  },
  "include": [
      "./lib/**/*",
      "./test/**/*",
  ]
}
